{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (server.js)",
      "program": "${workspaceFolder}/server.js",
      "envFile": "${workspaceFolder}/.env",  // Added: Loads .env for MONGODB_URI and other vars
